# Multi-Agent AI Service Configuration
# Copy this file to .env and fill in your values

# ===================================
# REQUIRED: Anthropic API Key
# ===================================
# Get your key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===================================
# Model Configuration
# ===================================
# Enable/disable specific models
GANDALF_ENABLE_HAIKU=true          # Use Haiku for fast, cheap tasks
GANDALF_ENABLE_OPUS=true           # Use Opus for complex, high-quality tasks

# Default model when router doesn't have specific rule
# Options: haiku, sonnet, opus
GANDALF_DEFAULT_MODEL=sonnet

# Force all tasks to use specific model (for testing only)
# Leave empty for normal operation
# Options: haiku, sonnet, opus, or leave empty
GANDALF_FORCE_MODEL=

# ===================================
# AI Agent Service Configuration
# ===================================
# Port for AI agent service to listen on
GANDALF_AGENT_PORT=8080

# Endpoint URL (for AgentClient to connect)
GANDALF_AGENT_ENDPOINT=http://localhost:8080/agent

# ===================================
# Flask API Configuration
# ===================================
# Port for main Flask API
FLASK_PORT=5000

# Environment (development or production)
FLASK_ENV=production

# Debug mode (true or false)
FLASK_DEBUG=false

# ===================================
# Token Limits (Optional)
# ===================================
# Maximum tokens per request for each model
GANDALF_MAX_TOKENS_HAIKU=2000
GANDALF_MAX_TOKENS_SONNET=4000
GANDALF_MAX_TOKENS_OPUS=8000

# ===================================
# Timeout Configuration (Optional)
# ===================================
# Request timeout in seconds for each model
GANDALF_TIMEOUT_HAIKU=10
GANDALF_TIMEOUT_SONNET=30
GANDALF_TIMEOUT_OPUS=60

# ===================================
# Cost Controls (Optional - Future)
# ===================================
# Daily budget limit in USD (not yet implemented)
# GANDALF_DAILY_BUDGET_USD=50.00

# ===================================
# Database Configuration
# ===================================
# (For future use when database integration is complete)
DB_NAME=gandalf
DB_USER=gandalf
DB_HOST=localhost
DB_PORT=3306
# DB_PASS=<auto-generated-during-setup>

# ===================================
# Logging Configuration
# ===================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
